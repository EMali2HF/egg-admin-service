        {
            "type": "node",
            "request": "launch",
            "name": "test",
            "runtimeExecutable": "npm",
            "windows": { "runtimeExecutable": "npm.cmd" },
            "runtimeArgs": [ "run-script", "test-local", "--", "--inspect-brk" ],
